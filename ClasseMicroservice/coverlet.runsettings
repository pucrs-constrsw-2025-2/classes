<?xml version="1.0" encoding="utf-8"?>
<RunSettings>
  <DataCollectionRunSettings>
    <DataCollectors>
      <DataCollector friendlyName="XPlat Code Coverage">
        <Configuration>
          <!-- Include all core microservice assemblies (API, Application, Domain) -->
          <Include>
            <ModulePath>.*ClasseMicroservice\.(API|Application|Domain)\.dll$</ModulePath>
          </Include>
          <!-- Exclude only explicit bootstrap and any classes marked with the attribute -->
          <Exclude>
            <Attribute>System.Diagnostics.CodeAnalysis.ExcludeFromCodeCoverageAttribute</Attribute>
            <Class>ClasseMicroservice.API.Program</Class>
          </Exclude>
          <Format>cobertura</Format>
          <SingleHit>false</SingleHit>
        </Configuration>
      </DataCollector>
    </DataCollectors>
  </DataCollectionRunSettings>
</RunSettings>
